{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "bundler",        // ✅ or "node16" or "nodenext"
//      "module": "ESNext",                   // ✅ required for bundler/nodenext
      "target": "ES2020",
      "module": "CommonJS",
      "types": ["jest", "@testing-library/jest-dom"]
    }
  },
  "include": [
    "src", "types.d.ts",
    "./config/jest/setupTests.ts"
  ]
}
