{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "bundler",        // âœ… or "node16" or "nodenext"
      "target": "ES2020",
      "module": "CommonJS",
      "types": ["jest", "@testing-library/jest-dom"]
    }
  },
  "include": [
    "./config/jest/setupTests.ts",
    "./src/**/*.tsx",
    "./src/**/*.ts"

  ]
}
